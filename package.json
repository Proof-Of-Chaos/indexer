{
  "name": "kusama-transfers",
  "private": true,
  "engines" : { 
    "node" : ">=16"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "db:migrate": "npx squid-typeorm-migration apply",
    "update": "npx npm-check-updates --filter /subsquid/ --upgrade && npm i -f",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server --subscriptions"
  },
  "dependencies": {
    "@subsquid/archive-registry": "2.1.2",
    "@subsquid/graphql-server": "3.3.0",
    "@subsquid/ss58": "0.1.3",
    "@subsquid/substrate-processor": "2.2.0",
    "@subsquid/typeorm-migration": "0.1.4",
    "@subsquid/typeorm-store": "0.2.0",
    "dotenv": "^10.0.0",
    "pg": "8.8.0",
    "type-graphql": "^1.2.0-rc.1",
    "typeorm": "0.3.9"
  },
  "devDependencies": {
    "@subsquid/typeorm-codegen": "0.3.1",
    "@subsquid/substrate-metadata-explorer": "1.0.9",
    "@subsquid/substrate-typegen": "2.1.0",
    "@types/node": "16.11.56",
    "typescript": "4.8.2"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf",
    "tabWidth": 4
  }
}
